<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context="com.ve.boxmanage.TakeoutActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="50dp"
        android:textSize="24dp"
        android:textColor="#000000"
        android:id="@+id/takeoutActLeftTopTitleTextView"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:background="@drawable/back_btn"
            android:id="@+id/takeoutActBackBtn" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="870dp"
                android:layout_height="386dp"
                android:gravity="top"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="302dp"
                android:layout_marginTop="58dp"
                android:text="请输入使用去向"
                android:textColor="@color/grayColor"
                android:textSize="36dp"
                android:background="@null"
                android:maxLines="8"
                android:maxLength="192"
                android:id="@+id/takeoutActExplainEditText" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="1000dp"
                android:layout_marginTop="500dp"
                android:text=" "
                android:id="@+id/takeoutActConfirmBtn" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="220dp"
                android:background="@drawable/takeout_act_board"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
